<!--pages/home/home.wxml-->
<import src="../tpls/products/products-tpl.wxml"/>

<view class="container">

<swiper indicator-dots="true" autoplay="true" class="swiper">
<block wx:for="{{dataArr}}">

<swiper-item class="banner-item" data-id="{{item.key_word}}" bindtap="onProductsItemTap">
<image mode="aspectFill" class="item=image" src="{{item.url}}"></image>
</swiper-item>

</block>
</swiper>

<block>
      <view class="add-new-address" data-id="{{item.key_word}}" data-name="{{item.name}}" bindtap="onboxProductsItemTap">
        <text class="icon">+</text>
        <text>绑定寝室</text></view>
</block>

<view class="home-main">
<view class="home-main-theme">
<view class="home-main-header">精选版块</view>
<view class="theme-box">
<block wx:for="{{themeArr}}">

<view wx:if="{{index==2}}" class="theme-item big" data-id="{{item.key_word}}" data-name="{{item.name}}" bindtap="onThemesItemTap">
<image src="{{item.url}}"></image>
</view>
<view wx:else class="theme-item" data-id="{{item.key_word}}" data-name="{{item.name}}" bindtap="onThemesItemTap">
<image src="{{item.url}}"></image>
</view>

</block>
</view>
</view>
<view class="home-main-products">
<view class="home-main-header">最近新品</view>
<template is="products" data="{{products:productsArr}}"></template>
</view>
</view>
</view>

